@model IEnumerable<mvcBlog.Models.Post>

@{
    ViewData["Title"] = ViewData["Title"] ?? "User Posts";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No posts found for this user.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-8 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">@post.Title</h2>
                            <p class="text-muted">
                                Posted on @post.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>
                            <p class="card-text">
                                @{
                                    var preview = post.Body.Length > 200 
                                        ? post.Body.Substring(0, 200) + "..." 
                                        : post.Body;
                                }
                                @preview
                            </p>
                            <a href="@Url.Action("Details", "Posts", new { id = post.Id })" class="btn btn-primary">
                                Read More â†’
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
